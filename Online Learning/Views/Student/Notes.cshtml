@model IEnumerable<Online_Learning.Models.MyMaterial>
@{
    if (Session["Username"] == null)
    {
        Response.Redirect("/Login/Login/");
    }
}
@{
    ViewBag.Title = "Notes";
    Layout = "~/Views/Shared/_MyLayout3.cshtml";
}
<br />
<br />
<br />
<h2>Notes</h2>


<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaterialName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaterialLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject.SubjectName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectName)
            </td>

            <td>
                @using (Html.BeginForm("DownloadFile", "Student", new { filePath = @item.MaterialName }))
                {
                    <div>
                        <input type="submit" name="name" value="Download" />
                    </div>
                }
            </td>
            @* <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.MaterialId }) |
                    @Html.ActionLink("Details", "Details", new { id=item.MaterialId }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.MaterialId })
                </td>*@
        </tr>
    }

</table>
